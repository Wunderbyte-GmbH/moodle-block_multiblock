{{!
    @template block_multiblock/carousel-mobile

    This template shows the multiple blocks in an carousel

    Example context (json):
    {
        "multiblockid": 28,
        "active": 8,
        "multiblock": [
            {
                "id": 1,
                "title": "Block 1",
                "content": "<p>Block 1</p>"
            },
            {
                "id": 2,
                "title": "Block 2",
                "content": "<p>Block 2</p>"
            }
        ]
    }
}}
{{=<% %>=}}
<div class="multiblock multiblock-carousel multiblock-carousel-bootstrap3">
    <div class="carousel slide" id="multiblock-content-<% multiblockid %>">
        <swiper-container [loop]="true" [speed]="1000" [autoplay]="{enable:true,delay:7000}">
            <%#multiblock%>
                <swiper-slide>
                    <ion-item>
                       <%{ content }%>
                    </ion-item>
                </swiper-slide>
            <%/multiblock%>
        </swiper-container>
    </div>
</div>
