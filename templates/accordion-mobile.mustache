{{!
    @template block_multiblock/accordion-mobile

    This template shows the multiple blocks in an accordion

    Example context (json):
    {
        "multiblockid": 28,
        "active": 8,
        "multiblock": [
            {
                "id": 1,
                "title": "Block 1",
                "content": "<p>Block 1</p>"
            },
            {
                "id": 2,
                "title": "Block 2",
                "content": "<p>Block 2</p>"
            }
        ]
    }
}}
{{=<% %>=}}
<div class="multiblock multiblock-accordion panel-group" id="multiblock-<% multiblockid %>">
    <ion-accordion-group value="<% active %>">
        <% name %>
        <%#multiblock%>
            <ion-accordion value="<% id %>">
                <ion-item slot="header" color="light">
                    <ion-label>
                        <% title %>
                    </ion-label>
                </ion-item>
                <div class="ion-padding" slot="content">
                    <%{ content }%>
                </div>
            </ion-accordion>
        <%/multiblock%>
    </ion-accordion-group>
</div>
